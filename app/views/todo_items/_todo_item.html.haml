.row.clearfix
  -if todo_item.completed?
    .complete
      =link_to [:complete, @todo_list, todo_item], method: :patch do
        %i.fa.fa-check{ style:'opacity: 0.4;' }
    .todo_item
      %p{ style:'opacity: 0.4;' }
        %strike= todo_item.content

  -else
    .complete
      =link_to [:complete, @todo_list, todo_item], method: :patch do
        %i.fa.fa-check
    .todo_item
      %p= todo_item.content

  .trash
    =link_to [@todo_list, todo_item], method: :delete, data:{ confirm:'Are you sure?' } do
      %i.fa.fa-trash
