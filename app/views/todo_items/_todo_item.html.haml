.row.clearfix
  -if todo_item.completed?
    .todo_item
      %p{ style:'opacity: 0.4;' }
        %strike= todo_item.content
  -else
    .complete=link_to 'Mark as Complete', [:complete, @todo_list, todo_item], method: :patch, data:{ confirm:'Are you sure?' }
    .todo_item
      %p= todo_item.content

  .trash= link_to 'Delete', [@todo_list, todo_item], method: :delete, data:{ confirm:'Are you sure?' }
